<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nathannguyen.learnvietnamese.MainActivity">


    <LinearLayout
        android:background="#9E9E9E"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/numColor">
            <TextView

                android:id="@+id/number"
                style="@style/itemMenu"
                android:background="?attr/selectableItemBackground"
                android:text="Numbers"
                android:onClick="menuList"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/famColor">

            <TextView
                android:id="@+id/family"
                style="@style/itemMenu"
                android:background="?attr/selectableItemBackground"
                android:text="Family Memebers"
                android:onClick="menuList"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorColor">

            <TextView
                android:id="@+id/color"
                style="@style/itemMenu"
                android:background="?attr/selectableItemBackground"
                android:text="Colors"
                android:onClick="menuList"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4FC3F7">

            <TextView
                android:id="@+id/phrase"
                style="@style/itemMenu"
                android:background="?attr/selectableItemBackground"
                android:text="Phrases"
                android:onClick="menuList"/>

        </FrameLayout>


    </LinearLayout>

</RelativeLayout>
